
@{
		Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
}

<div class="content-wrapper">
	<h1 class="justify-content-center">Welcome @ViewBag.CurrentStaff.Name 
	<img class="img-lg rounded-circle" src="~/ProfilePhotos/StaffPics/@ViewBag.CurrentStaff.Photo" alt="Profile image">
	</h1>

	<div class="row">
		<div class="col-9 grid-margin">
			<div class="card">
				<div class="card-body">
					<br />
					<h5 class="card-title">
						StaffID : @ViewBag.CurrentStaff.StaffID
					</h5><br />
					<h5 class="card-title">
						Name : @ViewBag.CurrentStaff.Name
					</h5><br />
					<h5 class="card-title">
						Email : @(ViewBag.CurrentStaff.Email)
					</h5><br />
					<h5 class="card-title">
						Mobile : @ViewBag.CurrentStaff.Mobile
					</h5><br />
					<h5 class="card-title">
						Username : @ViewBag.CurrentStaff.Username
					</h5>	<br />
					<h5 class="card-title">
						Password : @ViewBag.CurrentStaff.Password
					</h5>	<br />
					<h5 class="card-title">
						Department : @Model.DeptName
					</h5><br />
					<h5 class="card-title">
						Designation : @ViewBag.CurrentStaff.Designation
					</h5><br />
				</div>
			</div>
		</div>
	</div>
</div>
