@using System.Data
@{
	
		Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
	
	DataTable MatID = ViewBag.MatID;
	int SupplierID = ViewBag.SupplierID;

}

<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<h1 class="card-title"> Material List</h1>
					
					<form action="MaterialOfSupplierAdd" method="post" enctype="multipart/form-data">

						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th>MaterialName</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
									@for (int i = 0; i < Model.Rows.Count; i++)
									{
										<tr>
											<td>@Model.Rows[i]["MaterialName"]</td>
											<td><a href="MaterialOfSupplierDelete?SupplierID=@SupplierID&MaterialName=@Model.Rows[i]["MaterialName"]">REMOVE</a></td>
										</tr>
									}

									<tr>
										<td>
											<select class="form-control" name="MaterialID" tabindex="1">
												@for (int i = 0; i < MatID.Rows.Count; i++)
												{
													<option value='@MatID.Rows[i]["MaterialID"]'>@MatID.Rows[i]["MaterialName"]</option>
												}
											</select>
										</td>
										<td>
											<input type="hidden" name="SupplierID" value="@SupplierID" />
											<button type="submit" class="btn btn-dark btn-rounded btn-fw">Add</button>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>



