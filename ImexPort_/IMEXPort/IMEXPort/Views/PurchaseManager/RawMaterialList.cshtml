
@{
	
		Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
	
}

<div class="content-wrapper">
	<div class="row">
		<di class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<h2>Search Materials</h2>

					<form action="MaterialSearchSubmit" method="post" enctype="multipart/form-data">

						<h5><u>Search By Name</u></h5>

						<div class="form-group row">
							<label class="col-sm-3 col-form-label">Name</label>
							<div class="col-sm-9">
								<input type="text" class="form-control" name="Name" />
							</div>
						</div>



						<div class="row ">
							<div class="col-md-12">
								<div class="form-group justify-content-center row">
									<div class="form-group">
										<button class="btn btn-primary  submit-btn btn-block">Search</button>
									</div>
								</div>
							</div>
						</div>


					</form>
					<h1 class="card-title">Raw Material List</h1>

					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>MaterialID</th>
									<th>MaterialName</th>
									<th>MaterialCode</th>
									<th>StaffID</th>
								</tr>
							</thead>
							<tbody>

								@for (int i = 0; i < Model.Rows.Count; i++)
								{
								<tr>


									<td>@Model.Rows[i]["MaterialID"]</td>
									<td>@Model.Rows[i]["MaterialName"]</td>
									<td>@Model.Rows[i]["MaterialCode"]</td>
									<td>@Model.Rows[i]["StaffID"]</td>
									
										<td><a href="RawMaterialEdit?MaterialID=@Model.Rows[i]["MaterialID"]">Edit</a></td>
									

									<td><a href=" SupplierOfMaterial?MaterialID=@Model.Rows[i]["MaterialID"]">Supplier</a></td>



								</tr>

								}



							</tbody>
						</table>
					</div>
				</div>
			</div>
		</di>
	</div>
</div>



