
@{
	
		Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
}

<div class="content-wrapper">
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title">Edit Supplier</h1>
					<form class="form-sample" action="SupplierEditSubmit" method="post" enctype="multipart/form-data">
						<p class="card-description">
							Personal info
						</p>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Name</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" required name="Name"value="@Model.Name" />
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Email</label>
									<div class="col-sm-9">
										<input type="email" class="form-control" name="Email" value="@Model.Email" required/>
									</div>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Mobile</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" maxlength="10" name="Mobile" value="@Model.Mobile" required minlength="10"/>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Photo</label>
									<div class="col-sm-9">
										<img src="~/ProfilePhotos/SupplierPics/@Model.Photo" style="max-height:200px; max-width:200px;" />
										<br />
										<input type="file" name="Photo" required/>
									</div>
								</div>
							</div>
							
						</div>

						<div class="row">
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Username</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" name="Username" value="@Model.Username" required />
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Password</label>
									<div class="col-sm-9">
										<input type="password" class="form-control" name="Password" value="@Model.Password" required minlength="6"/>
									</div>
								</div>
							</div>
							
						</div>

						<div class="row">
							
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-9 col-form-label">Active</label>
									<div class="col-sm-3">
										<input type="checkbox" class="form-control" name="IsActive" value="1" @(Model.IsActive ? "checked" : "") />
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group row">
									<label class="col-sm-3 col-form-label">Country</label>
									<div class="col-sm-9">
										<input type="text" class="form-control" name="Country" value="@Model.Country"/>
									</div>
								</div>
							</div>
						</div>
						
						<div class="row ">
							<div class="col-md-12">
								<div class="form-group justify-content-center row">
									<div class="form-group">
										<input type="hidden" class="form-control" name="SupplierID" value="@Model.SupplierID" />
										<button type="submit" class="btn btn-dark btn-rounded btn-fw">Update</button>
									</div>
								</div>
							</div>
						</div>


					</form>
				</div>
			</div>
		</div>
	</div>
</div>

