
@{
	Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
}


<div class="content-wrapper">
	<div class="row">

		<div class="col-9 grid-margin">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title" >FCA Registration</h1>
					<p class="card-description">
						Custom Agent Registration
					</p>
					<form class="forms-sample" action="FCANewSubmit" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label for="exampleInputName1">Name</label>
							<input type="text" class="form-control" id="exampleInputName1" placeholder="Name" name="Name" required data-error="Enter properly">
						</div>
						<div class="form-group">
							<label for="exampleInputEmail3">Email</label>
							<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email" name="Email" required data-error="Enter properly">
						</div>
						<div class="form-group">
							<label for="exampleInputMobile">Mobile</label>
							<input type="text" class="form-control" id="exampleInputmobile" placeholder="Mobile" name="Mobile" required data-error="Enter properly" maxlength="10" minlength="10">
						</div>
						<div class="form-group">
							<label for="exampleInputPhoto">Photo</label>
							<input type="file" class="form-control" name="Photo" required>
						</div>
						<div class="form-group">
							<label for="exampleInputUsername">Username</label>
							<input type="text" class="form-control" id="exampleInputusername" placeholder="Username" name="Username" required data-error="Enter properly">
						</div>
						<div class="form-group">
							<label for="exampleInputPassword4">Password</label>
							<input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password" name="Password" required data-error="Enter properly" minlength="6">
						</div>


						<div class="form-actions">
							<div class="form-group">
								<label for="exampleInputCountry" class="col-form-label">Country</label>
								<select name="Country" class="form-control" required data-error="Enter properly">
									<option value="America">America</option>
									<option value="Canada">Canada</option>
									<option value="Australia">Australia</option>
									<option value="Europe">Europe</option>
								</select>
							</div>
						</div>
						<div class="form-group">
							<label for="exampleInputPort4">Port</label>
							<input type="text" class="form-control" id="exampleInputPort4" placeholder="Port" name="Port" required data-error="Enter port" />
						</div>
						<div class="control-group form-group">
							<label class="control-label col-form-label">Active</label>
							<div class="controls">
								<input type="checkbox" name="IsActive" value="1" />
							</div>
						</div>

						<button type="Submit" class="btn btn-dark btn-rounded btn-fw">Submit</button>
						<button type="Reset" class="btn btn-dark btn-rounded btn-fw">Reset</button>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>

